<h1>コメント</h1>

<ul><% @comments.each do |comment| %>
  <% unless comment.id.nil? #コメントが１件も存在しなかったら %>
  <li><%= comment.user %></li>
  <li><%= comment.content %></li>
  <li><%= link_to 'Edit', edit_blog_comment_path(@blog.comment) %></li>
  <li><%= link_to 'Destroy', blog_comment_path, method: :delete,
          data: { confirm: 'Are you sure?' } %></li>
  <% end %>
<% end %></ul>
