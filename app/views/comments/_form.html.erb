<%= form_for(@comment, remote: true) do |f| %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :blog_id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
