<div class="container">
<%= form_for @contact, url: contacts_confirm_path do |f| %>

<% if @contact.errors.any? %>
  <div class='alert alert-danger' role='alert'>
    <strong>入力内容にエラーがあります。</strong>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
<% end %>


  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :message %>
  <%= f.text_field :message %>

  <%= f.submit '確認画面へ' %>
<% end %>

<%= link_to 'トップへ戻る', root_path %>
</div>
