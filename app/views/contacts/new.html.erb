<h1>お問い合わせ新規</h1>

<%= form_for @contact, url: contacts_confirm_path do |f| %>

<% if @contact.errors.any? %>
  <div class='alert alert-danger' role='alert'>
    <strong>入力内容にエラーがあります。</strong>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
<% end %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: '名前' %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
  </div>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message, class: 'form-control', placeholder: 'お問い合わせ内容' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>

<%= link_to 'トップへ戻る', root_path, class: 'btn btn-default' %>
