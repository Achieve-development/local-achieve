<h1>Editing Answer</h1>

<%= form_for(@answer, url: question_answer_path(@answer.question, @answer)) do |f| %>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :question_id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
